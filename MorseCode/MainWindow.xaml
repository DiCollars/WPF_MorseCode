<Window x:Class="MorseCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MorseCode"
        mc:Ignorable="d"
        Title="MorseCode" Height="350" Width="700" ResizeMode="NoResize" WindowStyle="ThreeDBorderWindow">
    <Grid x:Name="MainRoot" Background="white">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextBox1" Grid.Row="0" SpellCheck.IsEnabled="True" Language="ru-ru"/>
        <TextBox x:Name="TextBlock1" Grid.Row="1" Background="Transparent"
         BorderThickness="0"
         Text=""
         IsReadOnly="True"
         TextWrapping="Wrap" />
        <Border BorderThickness="1" BorderBrush="Black" Grid.Row="0"/>
        <Border BorderThickness="1" BorderBrush="Black" Grid.Row="1"/>
        <Border BorderThickness="1" BorderBrush="Black" Grid.Row="2">
            <Button Content="Поехали!" Click="Button_Click"/>
        </Border>
    </Grid>
</Window>
